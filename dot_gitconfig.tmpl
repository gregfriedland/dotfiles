[user]
    name = {{ .git.name }}
    email = {{ .git.email }}

[alias]
    co = checkout
    s = status
    cob = checkout -b
    del = branch -D
    br = branch --format='%(HEAD) %(color:magenta)%(refname:short)%(color:reset) - %(contents:subject) %(color:yellow)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    d = diff
    cm = commit -m
    ll = log --oneline
    uncommit = reset --soft HEAD~1
    unstage = reset --soft HEAD^
    last = log -1 HEAD --stat
    l = log --decorate
    ca = commit --amend
    cane = commit --amend --no-edit
    a = add .
    r = rebase
    rc = rebase --continue
    ra = rebase --abort
    rs = rebase --skip
    ms = machete status
    ma = machete add
    me = machete edit
    mu = !git machete go up && git machete status
    md = !git machete go down && git machete status
    mup = machete update

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[core]
    editor = emacs

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
